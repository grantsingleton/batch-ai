{
  "name": "batch-ai",
  "version": "0.1.4",
  "description": "A unified SDK for making batch AI requests across different model providers",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "src/types.ts"
  ],
  "scripts": {
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc",
    "build": "npm run build:cjs && mv dist/index.js dist/index.cjs && npm run build:esm",
    "watch": "tsc --watch",
    "test": "jest",
    "lint": "eslint .",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "ai",
    "batch",
    "openai",
    "anthropic",
    "llm",
    "sdk"
  ],
  "author": "Grant Singleton",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grantsingleton/batch-ai.git"
  },
  "homepage": "https://github.com/grantsingleton/batch-ai#readme",
  "bugs": {
    "url": "https://github.com/grantsingleton/batch-ai/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.3",
    "openai": "^4.83.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  }
}
